    "version": "0.2.0",
    "configurations": [
        {
            "name": "Streamlit: Admin",
            "cwd": "${workspaceFolder}/app",
            "request" : "launch",
            "type": "debugpy",
            "module": "streamlit",
            "args": ["run", "./admin/app.py"],
            "console": "integratedTerminal",
            "envFile": "${workspaceFolder}/.env",
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}",
                    "remoteRoot": "${workspaceFolder}"
                }
            ]
        },
        {
            "name": "Streamlit: App",
            "request" : "launch",
            "type": "debugpy",
            "module": "streamlit",
            "args": ["run", "./chat/app.py"],
            "cwd": "${workspaceFolder}/app",
            "console": "integratedTerminal",
            "envFile": "${workspaceFolder}/.env",
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}",
                    "remoteRoot": "${workspaceFolder}"
                }
            ]
        }

    ]
}